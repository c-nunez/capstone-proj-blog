<%- include("partials/header.ejs") %>

    <h1>Edit Post</h1>
    <form action="/post/<%= post.id %>?_method=PUT" method="POST">
        <div class="input-group mb-3">
            <div class="form-floating">
                <input class="form-control" type="text" id="title" name="title" value="<%= post.title %>" style="max-width: fit-content;">
                <label for="title">Title:</label>                
            </div>
        </div>
        <div class="input-group mb-3">
            <div class="form-floating">
                <textarea class="form-control" id="content" name="content" style="height: fit-content;" ><%= post.content %></textarea>
                <label for="content">Content:</label>            
            </div>
        </div>

        <button class="btn btn-outline-dark" onclick="history.back()">Back</button>

        <button class="btn btn-outline-primary"  type="submit">Update Post</button>
    </form>
<%- include("partials/footer.ejs") %>